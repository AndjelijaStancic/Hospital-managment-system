<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SIMSWPF"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit" x:Class="SIMSWPF.Prikazisvetermine"
        mc:Ignorable="d"
        Title="Prikazisvetermine" Height="300" Width="550">
    <Grid>
        <DataGrid x:Name="dataGridTermini" ItemsSource="{Binding Termini}" IsReadOnly="True" 
                  SelectionMode="Extended" AutoGenerateColumns="False" HorizontalAlignment="Left" 
                  Height="158" Margin="10,47,0,0" VerticalAlignment="Top" Width="422">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Brojprostorije" Binding="{Binding Brojsale}"/>
                <DataGridTextColumn Header="Vremepocetkapregleda" Binding="{Binding Vremepocetkatermina}" />
                <DataGridTextColumn Header="Vremekrajapregleda" Binding="{Binding Vremekrajatermina}" />
                


            </DataGrid.Columns>
        </DataGrid>
        <Button Content="Obrisi" Click=" Obrisiodabranetermine" HorizontalAlignment="Left" Margin="225,210,0,0" VerticalAlignment="Top" Width="75"/>
    </Grid>
</Window>
