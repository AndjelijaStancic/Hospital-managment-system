<Window x:Class="SimsProjekat.RoomOperations"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimsProjekat"
        mc:Ignorable="d"
        Title="RoomOperations"
        Height="485"
        Width="857"
        ResizeMode="NoResize">
    <Window.Resources>
        <Style x:Key="roomButton" TargetType="Button">
            <Setter Property="FontFamily" Value="Georgia"></Setter>
            <Setter Property="FontWeight" Value="Medium"></Setter>
            <Setter Property="Foreground" Value="White"></Setter>
            <Setter Property="Margin" Value="0,0,6,0"></Setter>
            <Setter Property="Background" Value="#FF142223"></Setter>
        </Style>
        <Style x:Key="navButton" TargetType="Button">
            <Setter Property="FontFamily" Value="Georgia"></Setter>
            <Setter Property="FontWeight" Value="DemiBold"></Setter>
            <Setter Property="Foreground" Value="White"></Setter>
            <Setter Property="BorderThickness" Value="0"></Setter>
            <Setter Property="Background" Value="#FF2A393A"></Setter>
        </Style>
        <Style x:Key="Title" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"></Setter>
            <Setter Property="FontFamily" Value="Georgia"></Setter>
            <Setter Property="FontWeight" Value="Bold"></Setter>
            <Setter Property="VerticalAlignment" Value="Center"></Setter>
            <Setter Property="HorizontalAlignment" Value="Center"></Setter>
            <Setter Property="Foreground" Value="AntiqueWhite"></Setter>
        </Style>

        <Style x:Key="Table" TargetType="DataGrid">
            <Setter Property="HorizontalContentAlignment" Value="Center"></Setter>
            <Setter Property="VerticalAlignment" Value="Top"></Setter>
            <Setter Property="FontFamily" Value="Georgia"></Setter>
            <Setter Property="Foreground" Value="White"></Setter>
            <Setter Property="FontSize" Value="14"></Setter>
            <Setter Property="FontWeight" Value="Bold"></Setter>
            <Setter Property="HorizontalAlignment" Value="Center"></Setter>
        </Style>
        <Style x:Key="DeleteButton" TargetType="Button">
            <Setter Property="FontFamily" Value="Georgia"></Setter>
            <Setter Property="Background" Value="#FF1F3233"></Setter>
            <Setter Property="Foreground" Value="White"></Setter>
        </Style>
        <Style x:Key="FormLabel" TargetType="Label">
            <Setter Property="FontSize" Value="16"></Setter>
            <Setter Property="FontFamily" Value="Georgia"></Setter>
            <Setter Property="Foreground" Value="#FF1F3233"></Setter>

        </Style>
        <Style x:Key="UpdateButton" TargetType="Button">
            <Setter Property="FontFamily" Value="Georgia"></Setter>
            <Setter Property="Background" Value="#FF1F3233"></Setter>
            <Setter Property="Foreground" Value="White"></Setter>
        </Style>

        <Style x:Key="Column" TargetType="DataGridCell">
            <Setter Property="BorderBrush" Value="#FF284344"></Setter>
            <Setter Property="Background" Value="#FF375F5F"></Setter>
            <Setter Property="Opacity" Value="0.85"></Setter>
        </Style>
        <Style x:Key="Header" TargetType="DataGridColumnHeader">
            <Setter Property="Height" Value="30"></Setter>
            <Setter Property="FontSize" Value="18"></Setter>
            <Setter Property="FontFamily" Value="Georgia"></Setter>
            <Setter Property="FontWeight" Value="Medium"></Setter>
            <Setter Property="Foreground" Value="White"></Setter>
            <Setter Property="Background" Value="#FF203439"></Setter>
        </Style>

        <Style x:Key="BorderAdd" TargetType="Border">
            <Setter Property="Background" Value="White"></Setter>
            <Setter Property="Opacity" Value="0.95"></Setter>
            <Setter Property="Margin" Value="20"></Setter>
        </Style>

    </Window.Resources>
    <Window.Background>
        <LinearGradientBrush EndPoint="0.4,2"
                             StartPoint="0.4,0">

            <GradientStop Color="#FF226A79"
                          Offset="0.600" />

            <GradientStop Color="#FF0F1114"
                          Offset="0" />
        </LinearGradientBrush>
    </Window.Background>
    <Grid Margin="0,0,10,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="3*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <Button 
            Name="AllRoomsButton" 
            Style="{StaticResource roomButton}" 
            Grid.Row="1" 
            Grid.Column="3"  
            Click="AllRoomButton" 
            FontSize="13" 
            Margin="141,39,5,5" Grid.ColumnSpan="2">
            PROSTORIJE</Button>
        <Button 
            Name="AddRoomButton" 
            Style="{StaticResource roomButton}" 
            Grid.Row="1" 
            Grid.Column="5" 
            Click="AddButton" 
            FontSize="13" 
            Margin="3,38,2,5">
            KREIRANJE</Button>


        <Border 
            Name="AllRooms" 
            Visibility="Visible" 
            Grid.Column="1" 
            Grid.Row="2"  
            Grid.RowSpan="5" 
            Grid.ColumnSpan="5" >
            <Grid>
                <Grid.Effect>
                    <DropShadowEffect 
             Direction="270"
             Opacity="0.8"
             ShadowDepth="10"
             BlurRadius="15" />
                </Grid.Effect>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="0"></ColumnDefinition>
                    <ColumnDefinition Width="5"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="1"></RowDefinition>
                    <RowDefinition Height="11"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                    <RowDefinition Height="28"></RowDefinition>
                </Grid.RowDefinitions>
                <DataGrid 
                    Name="GridRoom"  
                    AutoGenerateColumns="False" 
                    Grid.Row="2" 
                    Grid.Column="1" 
                    ItemsSource="{Binding Rooms}" 
                    Style="{StaticResource Table}">
                    <DataGrid.Columns>
                        <DataGridTextColumn 
                            Header="Id"  
                            Width="2*"  
                            Binding="{Binding Id}"  
                            HeaderStyle="{StaticResource Header}" 
                            CellStyle="{StaticResource Column}"/>
                        <DataGridTextColumn 
                            Header="Naziv" 
                            Width="8*"   
                            Binding="{Binding Name}" 
                            HeaderStyle="{StaticResource Header}" 
                            CellStyle="{StaticResource Column}"/>
                        <DataGridTextColumn 
                            Header="Tip" 
                            Width="8*"   
                            Binding="{Binding Type}" 
                            HeaderStyle="{StaticResource Header}" 
                            CellStyle="{StaticResource Column}"/>
                        <DataGridTextColumn 
                            Header="Sprat" 
                            Width="4*"   
                            Binding="{Binding Floor}" 
                            HeaderStyle="{StaticResource Header}" 
                            CellStyle="{StaticResource Column}"/>
                        <DataGridTemplateColumn 
                            Header="Ažuriranje" 
                            Width="5*" 
                            HeaderStyle="{StaticResource Header}" 
                            CellStyle="{StaticResource Column}">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button 
                                        Name="updateButton" 
                                        Content="ažuriraj" 
                                        Click="updateButton"  
                                        Command="{Binding UpdateSelectedRoom}" 
                                        Style="{StaticResource UpdateButton}" >
                                        <Button.BitmapEffect>
                                            <DropShadowBitmapEffect 
                                                Color="#FF007DA7" 
                                                Direction="320" 
                                                Softness="1" 
                                                ShadowDepth="10" 
                                                Opacity="0.5" />
                                        </Button.BitmapEffect>
                                    </Button>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn 
                            Header="Brisanje" 
                            Width="4*" 
                            HeaderStyle="{StaticResource Header}" 
                            CellStyle="{StaticResource Column}">

                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button 
                                        Name="deleteButton" 
                                        Content="obriši" 
                                        Click="delButton" 
                                        Style="{StaticResource DeleteButton}">
                                        <Button.BitmapEffect>
                                            <DropShadowBitmapEffect 
                                                Color="#FF007DA7" 
                                                Direction="320" 
                                                Softness="1" 
                                                ShadowDepth="10" 
                                                Opacity="0.5" />
                                        </Button.BitmapEffect>
                                    </Button>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTemplateColumn 
                            Header="Renovacija" 
                            Width="5*" 
                            HeaderStyle="{StaticResource Header}" 
                            CellStyle="{StaticResource Column}">

                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button 
                                        Name="renoButton" 
                                        Content="renovacija" 
                                        Click="renovationButton" 
                                        Style="{StaticResource DeleteButton}">
                                        <Button.BitmapEffect>
                                            <DropShadowBitmapEffect 
                                                Color="#FF007DA7" 
                                                Direction="320" 
                                                Softness="1" 
                                                ShadowDepth="10" 
                                                Opacity="0.5" />
                                        </Button.BitmapEffect>
                                    </Button>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>

        <Border Name="UpdateRoom" 
                Grid.Column="2" 
                Grid.Row="1" 
                Grid.ColumnSpan="3" 
                Grid.RowSpan="5"  
                Visibility="Collapsed" 
                Style="{StaticResource BorderAdd}" 
                Margin="0,74,5,30">
            <Border.Effect>
                <DropShadowEffect 
             Direction="270"
             Opacity="0.8"
             ShadowDepth="10"
             BlurRadius="15" />

            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <TextBlock 
                    Grid.Column="1"  
                    Grid.ColumnSpan="4" 
                    Margin="19,10,19,53" 
                    Grid.Row="0" 
                    FontFamily="Georgia" 
                    TextAlignment="Center" 
                    FontWeight="Bold"  
                    FontSize="17" 
                    Grid.RowSpan="2" >
                    AŽURIRANJE IZABRANE<LineBreak></LineBreak>PROSTORIJE</TextBlock>
                <Label  
                    Grid.Row="1"   
                    Content="NAZIV:" 
                    FontSize="16" 
                    Style="{StaticResource FormLabel}" 
                    FontWeight="Medium"  
                    Grid.RowSpan="2" 
                    Margin="68,33,51,27" 
                    Grid.ColumnSpan="3"/>
                <TextBox 
                    Name="UpdatedName"
                    Grid.Column="2" 
                    Grid.Row="1" 
                    Grid.ColumnSpan="4" 
                    Margin="68,34,68,45" 
                    Grid.RowSpan="2"/>
                <Label 
                    Grid.ColumnSpan="3"   
                    Content="TIP:" 
                    FontWeight="Medium" 
                    Style="{StaticResource FormLabel}" 
                    FontSize="16" 
                    Grid.Row="2" 
                    Margin="68,42,63,27" 
                    Grid.RowSpan="2"/>
                <ComboBox 
                    Name="AddUpdatedType"  
                    ItemsSource="{Binding Path=TypesList}" 
                    Grid.Column="3" 
                    Grid.ColumnSpan="3" 
                    Grid.Row="2" 
                    Margin="1,42,68,39" 
                    Grid.RowSpan="2"  />
                <Button 
                    Name="UpdateConfirm" 
                    Grid.Column="2" 
                    Margin="20,15,20,10" 
                    Grid.ColumnSpan="2" 
                    Grid.Row="4" 
                    FontWeight="Medium"  
                    FontSize="15" 
                    Click="UpdateClick">AŽURIRAJ</Button>
            </Grid>
        </Border>


        <Border 
            Name="AddRoom" 
            Grid.Column="2" 
            Grid.Row="1" 
            Grid.ColumnSpan="3" 
            Grid.RowSpan="5"  
            Visibility="Collapsed" 
            Style="{StaticResource BorderAdd}" 
            Margin="0,74,5,30">
            <Border.Effect>
                <DropShadowEffect 
             Direction="270"
             Opacity="0.8"
             ShadowDepth="10"
             BlurRadius="15" />

            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <TextBlock 
                    Grid.Column="1"  
                    Grid.ColumnSpan="4" 
                    Margin="27,10,27,0" 
                    Grid.Row="0" 
                    FontFamily="Georgia" 
                    TextAlignment="Center" 
                    FontWeight="Bold"  
                    FontSize="17" >
                    KREIRANJE NOVE<LineBreak></LineBreak>PROSTORIJE
                </TextBlock>
                <Label  
                    Grid.Row="1"   
                    Content="NAZIV:" 
                    FontSize="16" 
                    Style="{StaticResource FormLabel}" 
                    FontWeight="Medium"  
                    Grid.RowSpan="2" 
                    Margin="51,32,0,15" 
                    Grid.ColumnSpan="2"/>
                <TextBox 
                    Name="NewRoomName" 
                    Grid.Column="3" 
                    Grid.Row="1" 
                    Grid.ColumnSpan="3" 
                    Margin="10,34,60,45" 
                    Grid.RowSpan="2"/>
                <Label 
                    Grid.ColumnSpan="2"   
                    Content="TIP:" 
                    FontWeight="Medium" 
                    Style="{StaticResource FormLabel}" 
                    FontSize="16" 
                    Grid.Row="2" 
                    Margin="51,20,10,34" 
                    Grid.RowSpan="2"/>
                <ComboBox 
                    Name="AddRoomType"  
                    ItemsSource="{Binding Path=TypesList}" 
                    Grid.Column="3" 
                    Grid.ColumnSpan="3" 
                    Grid.Row="2" 
                    Margin="10,24,60,3"  />
                <Label 
                    Grid.ColumnSpan="3"  
                    Content="SPRAT:"  
                    FontSize="16" 
                    Style="{StaticResource FormLabel}" 
                    FontWeight="Medium" 
                    Grid.Row="3" 
                    Margin="51,10,41,4" 
                    RenderTransformOrigin="0.67,-0.097"/>
                <TextBox 
                    Name="NewRoomFloor" 
                    Grid.Column="3" 
                    Grid.Row="3" 
                    Grid.ColumnSpan="3" 
                    Margin="10,10,60,17"  />
                <Button Name="AddConfirm" 
                        Grid.Column="2" 
                        Margin="20,15,20,10" 
                        Grid.ColumnSpan="2" 
                        Grid.Row="4" 
                        FontWeight="Medium"  
                        FontSize="15" 
                        Click="AddRoomClick">DODAJ</Button>
            </Grid>
        </Border>

        <Border 
            Name="RenoMenagment" 
            Grid.Row="2" 
            Grid.ColumnSpan="3"
            Grid.RowSpan="4"  
            Visibility="Collapsed" 
            Style="{StaticResource BorderAdd}"
            Grid.Column="2" Margin="10,52,10,39">
            <Border.Effect>
                <DropShadowEffect 
             Direction="270"
             Opacity="0.8"
             ShadowDepth="10"
             BlurRadius="15" />

            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <TextBlock  
                    Grid.ColumnSpan="6" 
                    Margin="67,10,63,37" 
                    Grid.Row="0" 
                    FontFamily="Georgia" 
                    TextAlignment="Center" 
                    FontWeight="Bold" 
                    FontSize="14" 
                    Grid.RowSpan="2" >
                    ZAKAZIVANJE RENOVACIJE
                </TextBlock>
                <Label 
                    Grid.ColumnSpan="3"   
                    Content="Početak:" 
                    FontWeight="Medium"
                    Style="{StaticResource FormLabel}" 
                    FontSize="16" 
                    Grid.Row="1" 
                    Margin="52,10,33,7" RenderTransformOrigin="0.542,0.135"/>
                <DatePicker  
                    Margin="10,10,52,7" 
                    Name="start" 
                    Grid.Column="3"
                    Grid.Row="1" 
                    Grid.ColumnSpan="3"/>

                <Label 
                    Grid.Row="2"   
                    Content="Kraj:" 
                    FontSize="16" 
                    Style="{StaticResource FormLabel}"
                    FontWeight="Medium" 
                    Grid.RowSpan="2" 
                    Margin="52,13,33,38" 
                    Grid.ColumnSpan="3"/>
                <DatePicker  
                    Margin="10,10,52,7" 
                    Name="finish" 
                    Grid.Column="3"
                    Grid.Row="2" 
                    Grid.ColumnSpan="3"/>
                <Label  
                    Grid.Row="3"   
                    Content="Opis renovacije:" 
                    FontSize="16" 
                    Style="{StaticResource FormLabel}" 
                    FontWeight="Medium"  
                    Grid.RowSpan="2" 
                    Margin="52,12,10,35" 
                    Grid.ColumnSpan="3"/>
                <TextBox 
                    Name="descriptionReno"
                    Grid.Column="3" 
                    Grid.Row="3" 
                    Margin="10,10,0,0" HorizontalAlignment="Left" Width="140" Grid.ColumnSpan="3"/>
                <Button
                    Name="renoConfirm" 
                    Grid.Column="2" 
                    Margin="0,10,0,10"
                    Grid.ColumnSpan="2" 
                    Grid.Row="4" 
                    FontWeight="Medium" 
                    FontSize="14" 
                    Click="renoConfirmClick">
                    potvrdi
                </Button>
            </Grid>
        </Border>


        <Border Name="WarningDelete" 
                Grid.Column="1" 
                Grid.Row="2" 
                Grid.ColumnSpan="5" 
                Grid.RowSpan="3"  
                Visibility="Collapsed" 
                Style="{StaticResource BorderAdd}" 
                Margin="69,20,71,10">
            <Border.Effect>
                <DropShadowEffect 
             Direction="280"
             Opacity="0.6"
             ShadowDepth="15"
             BlurRadius="20" />
            </Border.Effect>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <TextBlock 
                    Grid.Column="1"  
                    Grid.ColumnSpan="4" 
                    Margin="46,29,51,64" 
                    Grid.Row="0" 
                    FontFamily="Georgia" 
                    TextAlignment="Center" 
                    FontWeight="Bold"  
                    FontSize="20" 
                    Grid.RowSpan="2" >
                    UPOZORENJE
                </TextBlock>
                <TextBlock 
                    Grid.Column="0"  
                    Grid.ColumnSpan="6" 
                    Margin="0,20,0,0" 
                    Grid.Row="1" 
                    FontFamily="Georgia" 
                    TextAlignment="Center" 
                    FontWeight="Medium"  
                    FontSize="17" >
                    Da li ste sigurni da želite da obrišete izabranu prostoriju?
                </TextBlock>
                <Button 
                    Name="CDelete" 
                    Grid.Column="1"  
                    Grid.ColumnSpan="2" 
                    Grid.Row="3" 
                    Margin="15" 
                    FontWeight="Medium"  
                    FontSize="15"  
                    Click="ConfirmDelete">
                    DA
                </Button>
                <Button 
                    Name="DDelete" 
                    Grid.Column="3"  
                    Grid.ColumnSpan="2" 
                    Grid.Row="3" 
                    Margin="15" 
                    FontWeight="Medium"  
                    FontSize="15"  
                    Click="DenyDelete">
                    NE
                </Button>

            </Grid>
        </Border>

        <Grid Grid.ColumnSpan="7"  Grid.RowSpan="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Rectangle Fill="Black"
                       Opacity="0.4"
                       Grid.RowSpan="2"
                       Grid.ColumnSpan="7" Margin="0,0,-11,0"
                       />
            <Button 
                Name="DrugsButton" 
                Style="{StaticResource navButton}" 
                Grid.Row="0" 
                Grid.RowSpan="2" 
                Grid.Column="1"  
                Click="AllDrugsNav" 
                FontSize="12" 
                Margin="0,7,0,10">
                LEKOVI
            </Button>


            <Button 
                Name="EqpButton" 
                Style="{StaticResource navButton}" 
                Grid.Row="0" 
                Grid.RowSpan="2" 
                Grid.Column="2"  
                Click="AllEqpNav" 
                FontSize="12" 
                Margin="0,7,0,10">
                OPREMA
            </Button>
            <Button 
                Name="RoomAllButton" 
                Style="{StaticResource navButton}" 
                Grid.Row="0" 
                Grid.RowSpan="2" 
                Grid.Column="3"  
                Click="AllRoomsNav" 
                FontSize="12" 
                Margin="0,7,0,10">
                PROSTORIJE
            </Button>
            <Button 
                Name="StatButton" 
                Style="{StaticResource navButton}" 
                Grid.Row="0" 
                Grid.RowSpan="2" 
                Grid.Column="4"  
                Click="StatNav" 
                FontSize="12" 
                Margin="0,7,0,10">
                ANKETA
            </Button>
            <Button 
                Name="SettingsButton" 
                Style="{StaticResource navButton}" 
                Grid.Row="0" 
                Grid.RowSpan="2" 
                Grid.Column="5"  
                Click="SettNav" 
                FontSize="12" 
                Margin="0,7,0,10">
                PODEŠAVANJA
            </Button>
            <Button 
                Name="ProfileButton" 
                Style="{StaticResource navButton}" 
                Grid.Row="0" 
                Grid.RowSpan="2" 
                Grid.Column="6"  
                Click="ProfileNav"
                FontSize="12" 
                Margin="0,7,0,10">
                NALOG
            </Button>
            <Image HorizontalAlignment="Center"
                   Grid.Row="0" 
                   Grid.RowSpan="2"
                   Width="46"
                   Source="/Resources/Icons/Hospital.png" Margin="0,2,0,5"/>
        </Grid>

        <!--<Frame Name="MainFrame" 
               Grid.Row="1" 
               Grid.RowSpan="5" 
               Grid.Column="1"
               Grid.ColumnSpan="5"
               NavigationUIVisibility="Hidden">

        </Frame>-->

    </Grid>
</Window>
