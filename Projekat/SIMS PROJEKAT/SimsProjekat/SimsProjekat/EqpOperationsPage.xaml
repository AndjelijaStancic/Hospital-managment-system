                    <RowDefinition Height="28"></RowDefinition>
                </Grid.RowDefinitions>
                <DataGrid 
                    Name="GridEqw" 
                    AutoGenerateColumns="False" 
                    Grid.Row="2" 
                    Grid.Column="1" 
                    ItemsSource="{Binding equipment}" 
                    Style="{StaticResource Table}">
                    <DataGrid.Columns>
                        <DataGridTextColumn 
                            Header="Id" 
                            Width="1*"   
                            Binding="{Binding idEquipment}" 
                            HeaderStyle="{StaticResource Header}" 
                            CellStyle="{StaticResource Column}"/>
                        <DataGridTextColumn 
                            Header="Naziv opreme" 
                            Width="4*"  
                            Binding="{Binding name}" 
                            HeaderStyle="{StaticResource Header}" 
                            CellStyle="{StaticResource Column}"/>
                        <DataGridTextColumn 
                            Header="Količina" 
                            Width="1.5*"   
                            Binding="{Binding quantity}" 
                            HeaderStyle="{StaticResource Header}" 
                            CellStyle="{StaticResource Column}"/>
                        <DataGridTextColumn 
                            Header="Prostorija"  
                            Width="4*"  
                            Binding="{Binding nameRoom}"  
                            HeaderStyle="{StaticResource Header}" 
                            CellStyle="{StaticResource Column}" />
                        <DataGridTemplateColumn 
                            Header="Premeštanje" 
                            Width="3*" 
                            HeaderStyle="{StaticResource Header}"
                            CellStyle="{StaticResource Column}">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Button 
                                        Name="ChangeRoomEqp" 
                                        Content="odaberi" 
                                        Click="eqpChangeButton"   
                                        Style="{StaticResource changeButton}" >
                                        <Button.BitmapEffect>
                                            <DropShadowBitmapEffect 
                                                Color="#FF007DA7" 
                                                Direction="320" 
                                                Softness="1" 
                                                ShadowDepth="10" 
                                                Opacity="0.5" />
                                        </Button.BitmapEffect>
                                    </Button>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
            </Grid>
        </Border>


